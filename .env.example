# Runtime
NODE_ENV=production
PORT=5173
SESSION_SECRET=change-me-long-random-string

# Mode
# local = use data/games.json + placeholder downloads
# drive = use Google Drive search/download streaming
DRIVE_MODE=drive

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_CALLBACK_URL=https://<your-railway-domain>/auth/discord/callback
# Optional: restrict login to one guild/server
DISCORD_ALLOWED_GUILD=
# Optional: comma-separated Discord user IDs treated as admin
ADMIN_DISCORD_IDS=923472355924267028

# MongoDB (user data only)
MONGODB_URI=
MONGODB_DB=
MONGODB_USERS_COLLECTION=users
DEFAULT_DAILY_USES=10

# Google Drive
GOOGLE_FOLDER_ID=
# Pick one credentials method:
GOOGLE_SERVICE_ACCOUNT_PATH=./service-account.json
# GOOGLE_SERVICE_ACCOUNT_JSON=
# GOOGLE_SERVICE_ACCOUNT_BASE64=
